@using System.Web.Mvc.Html
@model MvcApplication1.Models.ViewModels.LoginView

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Log In</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Email">
                Email
            </label>
            <div class="controls">
                @Html.TextBox("Email", Model.Email, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Email")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Password">
                Password
            </label>
            <div class="controls">
                @Html.Password("Password", Model.Password, new { @class = "input-xlarge" })
                @Html.ValidationMessage("Password")
            </div>
        </div>
        
        <div class="control-group">
            <label class="control-label" for="IsPersistent">
                Remember me
            </label>
            <div class="controls">                
                @Html.CheckBox("IsPersistent", false, new { @class = "input-xlarge" })                
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Login
            </button>
        </div>
    </fieldset>
}
